# Multi-Agent Hospital Operations System Environment Configuration

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=multi_agent_hospital
DB_USER=postgres
DB_PASSWORD=1234

# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Agent Configuration
AGENT_UPDATE_INTERVAL=300  # seconds
COORDINATION_TIMEOUT=60    # seconds
MAX_OPTIMIZATION_ITERATIONS=5

# Hospital Configuration
HOSPITAL_NAME=General Hospital
HOSPITAL_ID=GH001
HOSPITAL_TIMEZONE=UTC

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=JSON

# Performance Configuration
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
ASYNC_WORKER_COUNT=4

# Alert Configuration
CRITICAL_ALERT_THRESHOLD=0.95  # bed utilization
LOW_UTILIZATION_THRESHOLD=0.30
EQUIPMENT_MAINTENANCE_DAYS=365

# Coordination Configuration
ENABLE_INTER_AGENT_COMMUNICATION=true
ENABLE_LLM_OPTIMIZATION=true
ENABLE_PREDICTIVE_ANALYTICS=true
